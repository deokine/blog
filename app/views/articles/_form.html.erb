

<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :body %>
    <%= form.rich_text_area :body, class: 'summer_note', id: 'post_body' %>
  </div>

  <%# <div class="field">
    <%= form.label :user_id %>
    <%#= form.text_field :user_id %>
  <%# </div> %>

  <%= form.hidden_field :user_id, value: current_user.id%>

  <div class="field form-group">
    <%= form.label :published_date %>
    </br>
    <%= form.datetime_select :published_date, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Article.statuses.map{ |k,v| [k.capitalize,k]}, article.status), {include_blank: false}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


